<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HintText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="MediumText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="GreyButtonStyle" parent="Theme.AppCompat">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAppearance">@style/MediumText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>