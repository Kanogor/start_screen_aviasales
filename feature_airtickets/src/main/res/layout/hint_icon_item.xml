<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/full_item"
    android:layout_width="@dimen/hint_layout_width"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/small_padding"
    tools:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/hint_icon_size"
        android:layout_height="@dimen/hint_icon_size"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/small_margin"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/first_hint_ic" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subtitle"
        style="@style/HintText.IconHint"
        android:layout_width="@dimen/hint_layout_width"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="@string/tools_hint_text" />
</LinearLayout>