<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/app_white_text</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TitleText.ChooseCountry">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleText.Button">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TitleText.ShowAll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue_button</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleText.Small">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleText.PopPlace">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleText.PopPlaceSub">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/subtitle_grey_text</item>
    </style>

    <style name="TitleText.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="HintText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HintText.IconHint">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HintText.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="HintText.BlueText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="boxBackgroundColor">@color/background</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/grey_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIconSize">16dp</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">10dp</item>
    </style>

    <style name="BlueButtonStyle" parent="Theme.AppCompat">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textAppearance">@style/TitleText.Button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>